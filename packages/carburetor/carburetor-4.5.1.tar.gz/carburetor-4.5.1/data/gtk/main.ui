  <!-- interface-authors Danial Behzadi <dani.behzi@ubuntu.com> -->
  <requires lib="gio" version="2.0"/>
  <requires lib="gtk" version="4.12"/>
  <requires lib="libadwaita" version="1.4"/>
  <object class="AdwApplicationWindow" id="MainWindow">
    <property name="icon-name">io.frama.tractor.carburetor</property>
    <signal name="realize" handler="on_mainpage_realize"/>
    <child>
      <object class="GtkWindowHandle">
        <property name="vexpand">True</property>
        <child>
          <object class="GtkBox" id="MainBox">
            <property name="orientation">vertical</property>
            <property name="vexpand">True</property>
            <child>
              <object class="AdwHeaderBar" id="HeaderBar">
                <property name="title-widget">HeaderTitle</property>
                <child type="end">
                  <object class="GtkToggleButton" id="OverlayButton">
                    <property name="active" bind-source="SplitView" bind-property="show-sidebar" bind-flags="bidirectional">False</property>
                    <property name="has-tooltip">True</property>
                    <property name="icon-name">utilities-terminal-symbolic</property>
                    <property name="tooltip-text" translatable="yes" context="tooltip">Show Details</property>
                    <child>
                      <object class="GtkShortcutController">
                        <property name="scope">managed</property>
                        <child>
                          <object class="GtkShortcut">
                            <property name="action">activate</property>
                            <property name="trigger">F9</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                <child type="title">
                  <object class="AdwWindowTitle" id="HeaderTitle">
                    <property name="title" translatable="yes">Carburetor</property>
                  </object>
                </child>
                <child type="end">
                  <object class="GtkMenuButton" id="MenuButton">
                    <property name="has-tooltip">True</property>
                    <property name="icon-name">open-menu-symbolic</property>
                    <property name="menu-model">AppMenu</property>
                    <property name="primary">True</property>
                    <property name="tooltip-text" translatable="yes" context="tooltip">Main Menu</property>
                  </object>
                </child>
                <child type="start">
                  <object class="AdwSplitButton" id="SplitButton">
                    <property name="action-name">app.connect</property>
                    <property name="label" translatable="yes">_Connect</property>
                    <property name="menu-model">ActionMenu</property>
                    <property name="use-underline">True</property>
                    <child>
                      <object class="GtkShortcutController">
                        <property name="scope">managed</property>
                        <child>
                          <object class="GtkShortcut">
                            <property name="action">activate</property>
                            <property name="trigger">F8</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <style>
                      <class name="suggested-action"/>
                    </style>
                  </object>
                </child>
                <style>
                  <class name="flat"/>
                </style>
              </object>
            </child>
            <child>
              <object class="AdwOverlaySplitView" id="SplitView">
                <property name="collapsed">True</property>
                <property name="content">ProgressOverlay</property>
                <property name="sidebar">TermView</property>
                <property name="sidebar-position">end</property>
                <property name="vexpand">True</property>
                <child>
                  <object class="GtkScrolledWindow" id="TermView">
                    <property name="child">TermText</property>
                    <child>
                      <object class="GtkTextView" id="TermText">
                        <property name="editable">False</property>
                        <property name="input-purpose">terminal</property>
                        <property name="monospace">True</property>
                        <property name="wrap-mode">word</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkOverlay" id="ProgressOverlay">
                    <property name="vexpand">True</property>
                    <child type="overlay">
                      <object class="GtkProgressBar" id="ProgressBar">
                        <property name="valign">end</property>
                        <style>
                          <class name="osd"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="AdwToastOverlay" id="ToastOverlay">
                        <property name="vexpand">True</property>
                        <child>
                          <object class="AdwStatusPage" id="MainPage">
                            <property name="icon-name">process-stop-symbolic</property>
                            <property name="title" translatable="yes">Stopped</property>
                            <property name="vexpand">True</property>
                            <child>
                              <object class="GtkButton" id="CancelButton">
                                <property name="action-name">app.cancel</property>
                                <property name="css-classes">pill</property>
                                <property name="halign">center</property>
                                <property name="label" translatable="yes" context="StatusPage button label">_Cancel</property>
                                <property name="use-underline">True</property>
                                <property name="valign">end</property>
                                <property name="visible">False</property>
                                <child>
                                  <object class="GtkShortcutController">
                                    <property name="scope">managed</property>
                                    <child>
                                      <object class="GtkShortcut">
                                        <property name="action">activate</property>
                                        <property name="trigger">&lt;Ctrl&gt;c</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <style/>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkShortcutController">
        <property name="scope">global</property>
        <child>
          <object class="GtkShortcut" id="HelpOverlayShortcut">
            <property name="action">action(app.show-help-overlay)</property>
            <property name="trigger">&lt;Ctrl&gt;question</property>
          </object>
        </child>
        <child>
          <object class="GtkShortcut" id="PrefsShortcut">
            <property name="action">action(app.preferences)</property>
            <property name="trigger">&lt;Ctrl&gt;comma</property>
          </object>
        </child>
        <child>
          <object class="GtkShortcut" id="QuitShortcut">
            <property name="action">action(app.quit)</property>
            <property name="trigger">&lt;Ctrl&gt;q</property>
          </object>
        </child>
        <child>
          <object class="GtkShortcut" id="NewIDShortcut">
            <property name="action">action(app.new_id)</property>
            <property name="trigger">F5</property>
          </object>
        </child>
      </object>
    </child>
  </object>
  <menu id="ActionMenu">
    <item>
      <attribute name="action">app.new_id</attribute>
      <attribute name="label" translatable="yes" context="Action Menu Item">_New ID</attribute>
    </item>
    <item>
      <attribute name="action">app.check_connection</attribute>
      <attribute name="label" translatable="yes" context="Action Menu Item">_Check connection</attribute>
    </item>
    <item>
      <attribute name="action">app.toggle_proxy</attribute>
      <attribute name="label" translatable="yes" context="Action Menu Item">_Toggle proxy on system</attribute>
    </item>
  </menu>
  <menu id="AppMenu">
    <item>
      <attribute name="action">app.preferences</attribute>
      <attribute name="label" translatable="yes" context="App Menu Item">_Preferences</attribute>
    </item>
    <item>
      <attribute name="action">app.show-help-overlay</attribute>
      <attribute name="label" translatable="yes" context="App Menu Item">_Keyboard Shortcuts</attribute>
    </item>
    <item>
      <attribute name="action">app.about</attribute>
      <attribute name="label" translatable="yes" context="App Menu Item">_About Carburetor</attribute>
    </item>
    <item>
      <attribute name="action">app.quit</attribute>
      <attribute name="label" translatable="yes" context="App Menu Item">_Quit</attribute>
    </item>
  </menu>
</interface>
