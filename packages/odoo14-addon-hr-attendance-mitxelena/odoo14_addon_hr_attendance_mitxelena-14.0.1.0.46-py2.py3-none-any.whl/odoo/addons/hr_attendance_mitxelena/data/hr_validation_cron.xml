<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_attendance_validation.check_attendance_cron" model="ir.cron">
        <field name="name">[Attendances] Generate previous month attendance review</field>
        <field name="interval_number">1</field>
        <field name="interval_type">months</field>
        <field name="nextcall" eval="(DateTime.now() + relativedelta(months=1, day=1, hour=8, minute=0, second=0)).strftime('%Y-%m-%d %H:%M:%S')"/>

    </record>

</odoo>
