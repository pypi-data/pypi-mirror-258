<odoo>
  <data>
    <!-- Automated action to process attendance record after every checkout -->
    <record id="hr_attendance_split_overtime_automated_action" model="base.automation">
      <field name="name">[Attendances] Split Overtime entries in Attendances on Checkout</field>
      <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
      <field name="trigger">on_create_or_write</field>
      <field name="state">code</field>
      <field name="filter_pre_domain">[["check_out","=",False]]</field>
      <field name="filter_domain">["&amp;",["no_recompute","=",False],["check_out","!=",False]]</field>
      <field name="code">
        records.action_process_attendance_overtime()        
      </field>
    </record>
  </data>
</odoo>
